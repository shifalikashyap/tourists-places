<%= form_with(model: [:admin, @place]) do |form| %>

<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= form.label :state %>
  <%= form.text_field :state, class: "form-control form-control-lg" %>
</div>

<div class="form-group">
  <%= form.label :city %>
  <%= form.text_field :city, class: "form-control form-control-lg"  %>
</div>

<div class="form-group">
  <%= form.label :latitude %>
  <%= form.text_field :latitude, class: "form-control form-control-lg"  %>
</div>

<div class="form-group">
  <%= form.label :longitude %>
  <%= form.text_field :longitude, class: "form-control form-control-lg" %>
</div>

 <div class="form-group">
  <%= form.label :description %>
  <%= form.text_field :description, class: "form-control form-control-lg" %>
 </div>


 <div class="form-group">
  <%= form.label :image_url %>
  <%= form.file_field :image_url, class: "form-control form-control-lg" %>
 </div>


 <div class="form-group">
  <%= form.label :images %>
  <%= form.file_field :images, class: "form-control form-control-lg", multiple: true %>
 </div>

<div class="form-group mt-2">
  <%= form.submit  class: "btn btn-primary btn-lg" %>
</div>

<% end %>